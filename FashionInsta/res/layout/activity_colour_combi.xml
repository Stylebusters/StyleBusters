<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ColorCombi" >

    <Button
        android:id="@+id/friendsListButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/addFriendButton"
        android:layout_alignBottom="@+id/addFriendButton"
        android:layout_toRightOf="@+id/addFriendButton"
        android:text="Redo" />

    <Button
        android:id="@+id/fashionSpreadButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/friendsListButton"
        android:layout_alignBottom="@+id/friendsListButton"
        android:layout_toRightOf="@+id/friendsListButton"
        android:text="Clear" />

    <Button
        android:id="@+id/colorCombiButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/fashionSpreadButton"
        android:layout_alignBottom="@+id/fashionSpreadButton"
        android:layout_toRightOf="@+id/fashionSpreadButton"
        android:text="Gallery" />

    <Button
        android:id="@+id/addFriendButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="17dp"
        android:text="Undo" />

    <Button
        android:id="@+id/button5"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/colorCombiButton"
        android:layout_alignBottom="@+id/colorCombiButton"
        android:layout_alignParentRight="true"
        android:text="Save" />


 <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/friendsListButton"
        android:layout_alignLeft="@+id/addFriendButton"
        android:layout_marginBottom="15dp"
        android:src="@drawable/spectrumcolor" 
        android:contentDescription="@string/colorspectrum"
        />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/tblack" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imageView1"
        android:src="@drawable/arrows" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignRight="@+id/imageView2"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="18dp"
        android:src="@drawable/mpants" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imageView2"
        android:layout_below="@+id/imageView1"
        android:src="@drawable/arrows" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView2"
        android:src="@drawable/tblack" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_below="@+id/imageView6"
        android:layout_toLeftOf="@+id/button5"
        android:src="@drawable/mpants" />

</RelativeLayout>
